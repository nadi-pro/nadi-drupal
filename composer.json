{
    "name": "nadi-pro/nadi-drupal",
    "description": "Nadi monitoring SDK for Drupal applications",
    "license": "MIT",
    "type": "drupal-module",
    "require": {
        "php": "^8.1",
        "drupal/core": "^10.1 || ^11.0",
        "nadi-pro/nadi-php": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "phpunit/phpunit": "^10.0 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nadi\\Drupal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nadi\\Drupal\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "format": "@php vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "drupal/core-composer-scaffold": false,
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
